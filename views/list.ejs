<%- include("header"); -%>

    <div class="box">
        <h1><%=listTitle%></h1>
    </div>
    <div class="box">
        <% for (let i = 0; i < listItems.length; i++ ) { %>
        <div class="item">
            <input type="checkbox">
            <p><%=listItems[i]%></p>
        </div>
        <% } %>
        <form action="/" method="post" class="item">
            <input type="text" name="newItem" placeholder="New Item" autocomplete="off">
            <button type="submit">+</button>
        </form>
    </div>

    <%- include("footer"); -%>